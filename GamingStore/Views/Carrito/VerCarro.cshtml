@model GamingStore.Models.ProductosCarro







@{
    ViewBag.Title = "VerCarro";
}


<h1 style="text-align: center;">Carro de Compras</h1>
<br />

<br />

<section class="col-lg-push-9">

    <h3 style="text-align:center;">Productos en el Carro </h3>

    @{ List<GamingStore.Models.ProductosCarro> Listacarrito = (List<GamingStore.Models.ProductosCarro>)Session["Carrito"]; }

       
    @if (Listacarrito == null)
    {
        

        <h2>No hay productos en el carro</h2>

    } else
    {
        <div class="container">
        <div class="well">

<table id="tCarrito" class="table">
  <thead>

      <tr>
           <th>     Producto:  </th>
           <th>     Cantidad:  </th>
           <th>     Precio:    </th>
           <th>     Subtotal:  </th>
          
      </tr>

   </thead>
                <tbody>

                    @foreach (var prod in Listacarrito)
                    {

                    <tr>
                        <td><a href="/Productos/VerProducto/@prod.Id">@prod.Nombre</a>
                        <br />
                        <button class="btneditar" onclick="deleteCarrito(@prod.Id)">Quitar del Carrito</button>
                        </td>

                        <td>
                            @prod.Cantidad
                           
                        </td>

                        <td>$@prod.Precio</td>

                        <td> $@prod.PrecioTotal</td>
                    </tr>
                   

                    }

                </tbody>
            </table>
        </div>
</div>

        


    }
</section>

